$('#average_star')
  .rating({
    initialRating: #{@company.average_rating.to_i},
    maxRating: 5,
    interactive: false
  })
;

$('#culture_star')
  .rating({
    initialRating: #{@company.average_culture_rating.to_i},
    maxRating: 5,
    interactive: #{user_signed_in?},
    clearable: #{user_signed_in?},
    onRate(value) {
      $.ajax({
        url: '/ratings/' + "#{@rating.id}",
        type: 'PATCH',
        data: { score: value, type: 'culture' }
      });
    }
  })
;

